@model NotesApp.Controllers.NoteBase

@{
    ViewBag.Title = "Delete";
    var userAccount = new NotesApp.Controllers.UserAccount(User as System.Security.Claims.ClaimsPrincipal);
}

<h2>Delete note (for user @userAccount.NamesFirstLast)</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Confirm by clicking the Delete button</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            <div class="panel panel-default panel-body">
                @Html.Raw(Model.Content)
            </div> 
            @*@Html.DisplayFor(model => model.Content)*@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Owner)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Owner)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateOfLastEdit)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfLastEdit)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
